{
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "removeComments": false,
    "outDir": "lib",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "sourceMap": true,
    "inlineSources": true
  },
  "compileOnSave": false,
  "include": [
    "./src/**/*.ts"
  ]
}
